mixin flags24(selectedCountryCode, countryCodes)
  ul.flags
    li
      img(src="/img/icons/flags-iso/24/" + selectedCountryCode + ".png")
    each countryCode in countryCodes
      li
        img(src="/img/icons/flags-iso/24/" + countryCode + ".png")
mixin flags64(selectedCountryCode, countryCodes)
  ul.flags
    li
      img(src="/img/icons/flags-iso/24/" + selectedCountryCode + ".png")
    each countryCode in countryCodes
      li
        img(src="/img/icons/flags-iso/24/" + countryCode + ".png")
mixin breadcrumbs(lessonTitle, sectionHeadings)
  h1=lessonTitle
  ul.sections
    each sectionHeading in sectionHeadings
      li
        a(href=sectionHeading.sectionUrl)=sectionHeading.sectionTitle


html
  head
    title=pageTitle
    for dep in css
      link(href="css/"+dep.filename, rel='stylesheet')
    for dep in js
      script(src="javascript/"+dep.filename)
  body
    +breadcrumbs(lessonTitle, headingSectionDetails)
    |!{ body }
